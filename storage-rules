rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Match the path: masterlists/{userId}/{classId}/{fileName}
    match /masterlists/{userId}/{classId}/{fileName} {
      // Allow access only if the user is logged in AND their auth UID matches the folder
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // (Optional) Keep default denial for everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}